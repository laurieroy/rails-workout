<div class="container">
	<div class="row">
		<div class="col-md-12">
			<% flash.each do |key, msg| %>
				<div class="alert alert-<%= key == "alert" ? "warning" : "success" %>
					alert-dismissable fade show" role="alert">
				<%= msg %>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% end %>
		</div>
	</div>
</div>

